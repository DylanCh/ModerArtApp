<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/canvas"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dylanhelps.modernartapp.MainActivity">

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_green"
        android:tag="@color/color_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dip"
        android:layout_height="200dip"
        android:id="@+id/green_view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_blue"
        android:tag="@color/color_blue"
        android:layout_width="150dip"
        android:layout_height="300dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/green_view"
        android:layout_toEndOf="@+id/green_view"
        android:id="@+id/blue_view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_dark_grey"
        android:tag="@color/color_dark_grey"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_toEndOf="@+id/blue_view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/blue_view"
        android:id="@+id/dark_grey_view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_light_grey"
        android:tag="@color/color_light_grey"
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:layout_toEndOf="@+id/blue_view"
        android:id="@+id/light_grey_view"
        android:layout_below="@+id/blue_view"
        android:layout_toRightOf="@+id/dark_grey_view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/white"
        android:tag="@color/white"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toEndOf="@+id/light_grey_view"
        android:layout_toRightOf="@+id/light_grey_view"
        android:layout_below="@+id/blue_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/dark_grey_view"
        android:layout_toStartOf="@+id/dark_grey_view"
        android:id="@+id/view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_cyan"
        android:tag="@color/color_cyan"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_toRightOf="@+id/dark_grey_view"
        android:layout_below="@+id/dark_grey_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cyan_view"
        android:layout_alignEnd="@+id/dark_grey_view">
    </com.dylanhelps.modernartapp.RectangularView>

    <com.dylanhelps.modernartapp.RectangularView
        android:background="@color/color_dark_blue"
        android:tag="@color/color_dark_blue"
        android:layout_width="170dip"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dark_grey_view"
        android:layout_toRightOf="@+id/dark_grey_view"
        android:layout_below="@+id/cyan_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/dark_blue_view"
        android:layout_alignBottom="@+id/view">
    </com.dylanhelps.modernartapp.RectangularView>


    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>

